{
  "manifest_version": 2,
  "name": "Destylize",
  "version": "1.2",

  "description": "Converts Unicode styled 'fonts' to accessible and readable plain text",

  "icons": {
    "16": "icons/destylize-16.png",
    "32": "icons/destylize-32.png",
    "48": "icons/destylize-48.png",
    "96": "icons/destylize-96.png"
  },

  "applications": {
    "gecko": {
      "id": "destylize@wmww.sh"
    }
  },

  "permissions": [
    "storage"
  ],

  "background": {
    "scripts": [
      "src/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/char_map.js",
        "src/scanner.js",
        "src/destylize.js"
      ]
    }
  ],

  "browser_action": {
    "browser_style": true,
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/destylize-16.png",
      "32": "icons/destylize-32.png",
      "48": "icons/destylize-48.png",
      "96": "icons/destylize-96.png"
    }
  }
}
